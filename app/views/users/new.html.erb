<h1>Registrati sul sito del tuppetto rosso!</h1>

<%= error_messages_for :user %>

<% form_for :user, :url => users_path do |f| -%>
<p><label for="login">Nome Utente </label><br/>
<%= f.text_field :login %><br/>
<small>(solo alfanumerici e underscore senza spazi, es. francesco83, enzo_s)</small>
<br/>
<label for="url">Il tuo sito Web, se ne hai uno</label><br/>
<%= f.text_field :url %>
<br/>
 <small>(deve iniziare con http://)</small>
<br/>
<label for="password">Password</label><br/>
<%= f.password_field :password %>
<br/>
<label for="password_confirmation">Conferma Password</label><br/>
<%= f.password_field :password_confirmation %></p>

<%= render :partial => 'home/signup_captcha' %>

<p><%= submit_tag 'Registrati' %></p>
<% end -%>
